{
  "git": {
    "requireBranch": "main",
    "commitMessage": "release: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "tokenRef": "GITHUB_TOKEN",
    "draft": false,
    "autoGenerate": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true,
    "publishConfig": {
      "registry": "https://registry.npmjs.org"
    }
  },
  "hooks": {
    "after:git:release": "âœ… echo Successfully created git tag v${version}",
    "after:bump": "pnpm build",
    "after:release": "ðŸŽ‰ echo Successfully released v${version} to npm."
  }
}